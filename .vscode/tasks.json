{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "flutter pub get",
      "type": "shell",
      "command": "flutter",
      "args": ["pub", "get"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "build runner",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "build", "--delete-conflicting-outputs"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "flutter run (chrome)",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "chrome"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "backend dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}/backend" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "backend tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "options": { "cwd": "${workspaceFolder}/backend" },
      "problemMatcher": []
    }
  ]
}
